{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["vite/client", "vitest", "vitest/globals"],
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["./src/**/*", "./scripts/**/*", "./types/**/*", "./test/**/*", "./*.js", "./*.ts"],
  "exclude": ["node_modules", "dist"]
}
